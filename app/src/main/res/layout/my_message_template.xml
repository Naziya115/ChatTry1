<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <RelativeLayout
        android:id="@+id/container_of_my_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"

        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:paddingBottom="5dp"
        android:paddingTop="5dp"

        android:background="@drawable/my_message_background">


        <TextView
            android:id="@+id/lblMyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mishka thinking...."

            android:maxWidth="250dp"


            android:layout_centerInParent="true"
            android:paddingBottom="15dp"
            android:paddingRight="40dp"
            android:layout_marginLeft="5dp"


            android:textColor="@color/white"
            android:textSize="20dp"

            />


        <TextView
            android:id="@+id/lblTimeOfMyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignRight="@id/lblMyMessage"
            android:layout_alignBottom="@id/lblMyMessage"
            android:layout_marginBottom="-3dp"


            android:text="5:05"
            android:textColor="@color/smooth_gray"
            android:textSize="13dp" />






    </RelativeLayout>

</RelativeLayout>