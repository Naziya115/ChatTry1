<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <RelativeLayout
        android:id="@+id/container_of_outer_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/outer_message_background"


        android:paddingLeft="5dp"

        android:paddingTop="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/lblSenderOfOuterMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Mishka"
            android:textColor="@color/smooth_gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/lblOuterMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"


            android:layout_marginTop="35dp"
            android:maxWidth="250dp"
            android:paddingRight="40dp"


            android:paddingBottom="10dp"
            android:text="Mishka thinking...."
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblTimeOfOuterMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignRight="@id/lblOuterMessage"
            android:layout_alignBottom="@id/lblOuterMessage"


            android:text="5:05"
            android:textColor="@color/smooth_gray"
            android:textSize="13dp" />

    </RelativeLayout>

</RelativeLayout>
